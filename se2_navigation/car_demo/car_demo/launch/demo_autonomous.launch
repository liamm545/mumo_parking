	output="screen" ns="/erp42" 
					args="joint_state_controller 
						left_front_wheel_controller
						left_back_wheel_controller
						right_front_wheel_controller
						right_back_wheel_controller
						right_steer_wheel_controller
						left_steer_wheel_controller"/>

	<node pkg="joint_state_publisher" type="joint_state_publisher"  name="joint_state_publisher">
    	<param name="use_gui" value="False"/>
  	</node>
 -->


	<!-- <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
		args="-x 0.0 -y 4.0 -z 0.0 -unpause -urdf -model erp42 -param robot_description" output="screen" /> -->


	<node name="rviz_car_demo" pkg="rviz" type="rviz"
		args="-d $(arg rvizconfig)" required="true" />
</launch>
