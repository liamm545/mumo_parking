<?xml version="1.0"?>
<launch>
	<arg name="model"
		default="$(find erp42_description)/urdf/erp42.urdf" />
	<arg name="rvizconfig"
		default="$(find car_demo)/rviz/demo_autonomous.rviz" />
	<arg name="launch_rviz" default="true" />

	<arg name="ompl_planner_ros_parameter_path"
		default="$(find car_demo)/config/reeds_shepp_planner_ros.yaml" />
	<arg name="erp_path_tracker_ros_parameters_filename"
		default="$(find car_demo)/config/erp_path_tracker_ros_parameters.yaml" />
	<arg name="erp_pid_parameters_filename"
		default="$(find car_demo)/config/erp_pid_parameters.yaml" />

	<param name="/erp_path_tracker_ros_parameters_filename"
		type="string"
		value="$(arg erp_path_tracker_ros_parameters_filename)" />
	<param name="/erp_pid_parameters_filename" type="string"
		value="$(arg erp_pid_parameters_filename)" />
	<param name="robot_description" textfile="$(arg model)" />

	<include
		file="$(find se2_planning_ros)/launch/se2_planner.launch">
		<arg name="launch_rviz" value="false" />
		<arg name="ompl_planner_ros_parameter_path"
			value="$(arg ompl_planner_ros_parameter_path)" />
	</include>

	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="verbose" value="true" />
		<arg name="world_name" value="$(find car_demo)/worlds/empty.world" />
	</include>

	<node pkg="robot_state_publisher" type="robot_state_publisher"
		name="robot_state_publisher">
		<!-- <remap from="robot_description" to="different_robot_description" /> -->
		<!-- <remap from="joint_states" to="/erp42/joint_states" /> -->
	</node>
	<node pkg="fake_localization" type="fake_localization"
		name="fake_localization">
		<remap from="base_pose_ground_truth"
			to="/erp42/base_pose_ground_truth" />
	</node>

	<node pkg="tf2_ros" type="static_transform_publisher"
		name="very_inaccurate_odom" args="0 0 0 0 0 0 odom base_link" />

	<node pkg="car_demo" type="erp42_controller_node"
		name="erp42_controller_node" output="screen" launch-prefix="" />

	<node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"
		args="-param robot_description -urdf -x 0.0 -y 4.0 -z 1.0 -model erp42" />

	<!-- <param name="robot_description" command="$(find xacro)/xacro $(arg model)" /> -->
	
	<!-- <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_odom" args="0 4.0 0 0 0 0 map odom" /> -->

	<!-- <rosparam file="$(find erp42_description)/config/controllers.yaml" command="load" /> -->

